.result {
    position: absolute;
    bottom: 4vh;
    opacity: 0.6;
    height: 20%;
    width: 100vw;
    padding: 0;
}

.result span {
    display: inline-block;
    width: 25%;
    text-align:center
}

/* 头部晴雨  */
.title_sky {
    position: absolute;
    top: 0;
    right: 50%;
    transform: translateX(50%);
    font-size: 1.5rem
}

.four_sky_image image {
    width: 100%;
    height: 100%
}

.four_date {
   padding-bottom: 10px
}

 .four_sky_image span {
   width: 15vw;
   height: 15vw
}

.four_high{
    font-size: 0.8rem
}

.iconImg {
   width: 15vw;
   height: 15vw
}

.wendu {
    font-size: 4rem;
    font-weight: lighter
}

/* 中部温度区域  */
.middle {
    top: 20%;
    position: absolute;
    left: 0;
    padding-left: 2rem
}

.pm25 {
    color: rgba(255,255,255,0.7);
    margin-left: 0.5rem
}

.city {
    color: rgba(255,255,255,0.7);
    margin-left: 0.5rem;
    margin-top: 0.5rem
}
