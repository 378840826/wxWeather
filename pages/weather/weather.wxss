view{
  color: #fff;
}

/*背景图片*/
#bg{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1
}

/*.container {
    width: 100vw;
