<!--weather.wxml-->
<view class="container">
    <!-- 临用查询 -->
    <!-- <view class="">
        <input type="input" class='input_city_name' value="广州">
        <button type="button" class="button_query">查询</button>
    </view> -->
    <image id='bg' src='img/bg.webp'></image>
    <!-- 头部晴雨 -->
    <view class="title_sky">{{sky}}</view>

    <!-- 中部温度 -->
    <view class="middle">
        <view class="wendu"><span>{{wendu}}</span></view>
        <view class="pm25">pm2.5: {{pm25}}</view>
        <view class="city">{{city}}</view>
    </view>

    <!-- 底部预报 -->
    <view class="result">
        <view class="four_date">
            <span>{{date[0]}}</span>
            <span>{{date[1]}}</span>
            <span>{{date[2]}}</span>
            <span>{{date[3]}}</span>
            <!-- <span>{{date[4]}}</span> -->
        </view>
        <view class="four_sky_img">
            <span><image class='iconImg' src='img/icon/{{fourSky[0]}}.png'></image></span>
            <span><image class='iconImg' src='img/icon/{{fourSky[1]}}.png'></image></span>
            <span><image class='iconImg' src='img/icon/{{fourSky[2]}}.png'></image></span>
            <span><image class='iconImg' src='img/icon/{{fourSky[3]}}.png'></image></span>
            <!-- <span><image class='iconImg' src='/img/icon/{{fourSky[4]}}.png'></image></span> -->
        </view>
        <view class="four_high">
            <span>{{fourHigh[0]}}</span>
            <span>{{fourHigh[1]}}</span>
            <span>{{fourHigh[2]}}</span>
            <span>{{fourHigh[3]}}</span>
            <!-- <span>{{fourHigh[4]}}</span> -->
        </view>
    </view>
</view>
